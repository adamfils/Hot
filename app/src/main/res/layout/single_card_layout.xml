<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <ImageView
            android:id="@+id/hot_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/hotimage_bg"
            android:src="@drawable/queen"
            android:scaleType="centerCrop" />
            
        <TextView
            android:id="@+id/hot_user_name_age"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/hot_image"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:padding="8dp"
            android:text="Edel Queen, 19"
            android:textColor="#000"
            android:textSize="25sp"
            android:background="@drawable/bg_behind_text"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/hot_user_name_age"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>